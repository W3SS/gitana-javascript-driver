                        <phase>process-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <concat destfile="${project.build.directory}/${project.build.finalName}/js/gitana.min.updated.js"
                                        fixlastline="yes">
                                    <filelist dir="."
                                              files="src/main/webapp/js_src/license.js ${project.build.directory}/${project.build.finalName}/js/gitana.min.js"/>
                                </concat>
                                <delete file="${project.build.directory}/${project.build.finalName}/js/gitana.min.js"/>
                                <move file="${project.build.directory}/${project.build.finalName}/js/gitana.min.updated.js"
                                      tofile="${project.build.directory}/${project.build.finalName}/js/gitana.min.js"/>
                            </target>
                        </configuration>
