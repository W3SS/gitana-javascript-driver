                    </execution>
                    <execution>
                        <id>minify-tests</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                        <configuration>
                            <jsSourceDir>tests/js</jsSourceDir>
